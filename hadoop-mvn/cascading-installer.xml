<!-- 
	mvn -f cascading-installer.xml install -Dcascading.version=0.6.1 -Djanino.version=2.5.12 -Djgrapht.version=jdk1.5 -Dtagsoup.version=1.1.3 -Dmaven.test.skip=true
-->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>cascading</groupId>
  <artifactId>cascading</artifactId>
  <name>Cascading (${cascading.version})</name>
  <packaging>jar</packaging>
  <version>${cascading.version}</version>
  <properties>
	<cascading.version>1.0.11</cascading.version>
	<janino.version>2.5.15</janino.version>
	<jgrapht.version>jdk1.6</jgrapht.version>
	<tagsoup.version>1.2</tagsoup.version>
  </properties>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <executions>
          <execution>
            <id>install-cascading</id>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>cascading-jars/cascading-${cascading.version}.jar</file>
              <groupId>cascading</groupId>
              <artifactId>cascading</artifactId>
              <packaging>jar</packaging>
              <version>${cascading.version}</version>
              <generatePom>true</generatePom>
              <createChecksum>true</createChecksum>
            </configuration>
          </execution>
          <execution>
            <id>install-janino</id>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>cascading-jars/janino-${janino.version}.jar</file>
              <groupId>janino</groupId>
              <artifactId>janino</artifactId>
              <packaging>jar</packaging>
              <version>${janino.version}</version>
              <generatePom>true</generatePom>
              <createChecksum>true</createChecksum>
            </configuration>
          </execution>
          <execution>
            <id>install-jgrapht</id>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>cascading-jars/jgrapht-${jgrapht.version}.jar</file>
              <groupId>jgrapht</groupId>
              <artifactId>jgrapht</artifactId>
              <packaging>jar</packaging>
              <version>${jgrapht.version}</version>
              <generatePom>true</generatePom>
              <createChecksum>true</createChecksum>
            </configuration>
          </execution>
          <execution>
            <id>install-tagsoup</id>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>cascading-jars/tagsoup-${tagsoup.version}.jar</file>
              <groupId>tagsoup</groupId>
              <artifactId>tagsoup</artifactId>
              <packaging>jar</packaging>
              <version>${tagsoup.version}</version>
              <generatePom>true</generatePom>
              <createChecksum>true</createChecksum>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>